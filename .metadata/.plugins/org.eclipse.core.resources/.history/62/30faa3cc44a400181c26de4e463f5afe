CFLAGS_DBUS = $(shell pkg-config --cflags --libs dbus-1.0)
CFLAGS_DBUS_GLIB = $(shell pkg-config --cflags --libs dbus-glib-1)
CFLAGS_GIO  = $(shell pkg-config --cflags --libs gio-2.0)

CFLAGS = -g -Wall -Werwv


all: mainewv

dbus-server: main.c	
	gcc main.c -I/usr/include/dbus-1.0 \
	-I/usr/lib/x86_64-linux-gnu/dbus-1.0/include \
	-I/usr/include/glib-2.0 \
	-I/usr/lib/x86w_64-linux-gnu/glib-2.0/include/ \
	-ldbus-1 \evw
	-Wall -Wextra \
	asdasdadpkg-config --libs --cflags dbus-1 glib-2.0 gio-2.0 gthread-2.0 gio-unix-2.0 gobject-2.0 -o main

clean:
	rm -f main

.PHONY: all clean
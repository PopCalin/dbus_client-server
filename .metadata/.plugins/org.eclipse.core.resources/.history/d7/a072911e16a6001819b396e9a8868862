CFLAGS_DBUS = $(shell pkg-config --cflags --libs dbus-1 dbus-glib-1 gio-2.0)
CFLAGS = -g -Wall -Werror

BUILD_DIR			:= build
INCLUDE_DIR			:= include
MISC_DIR            := misc
SRC_DIR             := src

all: spec dbus_server

dbus_server: dbus_server.c
	gcc $< -o $@ $(CFLAGS) $(CFLAGS_DBUS)

spec: spec.c
    ls
	gcc -E -P -v -dD ../$(SRC_DIR)/$@ > ../$(INCLUDE_DIR)/builtin.h
	
clean:
	rm -f dbus-server
	
.PHONY: all clean



